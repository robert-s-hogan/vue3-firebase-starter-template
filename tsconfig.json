{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts", // Ensure your .d.ts files are included
    "src/**/*.vue",
    "cypress/**/*.ts", // Include Cypress test files
    // potentially other config/script files if they use TS features
    "*.config.js", // VS Code TS service can check JS files too
    "*.config.ts",
    "vite-env.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"]
  },

  "types": ["vite/client"],
  "typeRoots": ["./node_modules/@types", "./src"]
}
